
<div class="petition">
<h1>{{text}}</h1>

{{#each signers}}
    {{#if url}}
        <p><a href={{url}}>{{firstname}} {{lastname}}</a> {{age}} <a href="/signers/{{city}}">{{city}}</a></p>
    {{else}}
        <p>{{firstname}} {{lastname}} {{age}} <a href="/signers/{{city}}">{{city}}</a></p>
    {{/if}}
{{/each}}

{{#if link}}
    <a href="/signers/">List of supporters.</a>
{{/if}}
</div>
